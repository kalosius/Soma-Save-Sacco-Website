# Django Settings
SECRET_KEY=your-django-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (optional - defaults to SQLite)
# Uncomment and configure for PostgreSQL
# DB_NAME=somasave
# DB_USER=postgres
# DB_PASSWORD=your-password
# DB_HOST=localhost
# DB_PORT=5432

# ========================================
# EMAIL CONFIGURATION - CHOOSE ONE:
# ========================================

# Option 1: RESEND API (Recommended for Railway)
# Get your key from https://resend.com
RESEND_API_KEY=re_your_api_key_here
USE_RESEND=True

# Option 2: SMTP (For local development only)
# Railway blocks SMTP ports - use Resend for production
# EMAIL_HOST=smtp.zoho.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=info@somasave.com
# EMAIL_HOST_PASSWORD=your-app-password-here
# EMAIL_USE_TLS=True

# Email Sender Configuration
DEFAULT_FROM_EMAIL=SomaSave SACCO <info@somasave.com>
SERVER_EMAIL=info@somasave.com

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:5173

# ========================================
# PRODUCTION SETTINGS (Railway)
# ========================================
# When deploying to Railway, set these in Railway Variables:
# - RESEND_API_KEY=re_your_actual_key
# - USE_RESEND=True
# - SECRET_KEY=your-production-secret-key
# - DEBUG=False
# - ALLOWED_HOSTS=somasave.com,www.somasave.com,your-app.railway.app
